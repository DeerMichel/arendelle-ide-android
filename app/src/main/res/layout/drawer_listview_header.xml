<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/primary_dark_material_light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/drawer_listview_header_preview"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/drawer_listview_header_text"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:shadowColor="@android:color/black"
        android:shadowRadius="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/drawer_listview_header_preview"
        android:layout_alignBottom="@id/drawer_listview_header_preview"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/drawer_listview_header_button_add"
        android:background="@drawable/ic_add"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/drawer_listview_header_preview" />

    <ImageButton
        android:id="@+id/drawer_listview_header_button_settings"
        android:background="@drawable/ic_settings"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_below="@id/drawer_listview_header_preview"
        android:layout_toRightOf="@id/drawer_listview_header_button_add" />

</RelativeLayout>